<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  	android:orientation="vertical"
  	android:background="@color/F3F2F2"
  	 >

 <include layout="@layout/title_back" />


	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="198dp"
	    android:paddingRight="198dp"
	    android:orientation="vertical" >

	    	 <TextView
	    	     android:id="@+id/msg_title"
	    	     android:layout_width="fill_parent"
	    	     android:layout_height="106dp"
	    	     android:layout_marginLeft="@dimen/margin_left2"
	    	     android:layout_marginRight="@dimen/margin_left2"
	    	     android:gravity="bottom"
	    	     android:maxLines="2"
	    	     android:paddingBottom="20dp"
	    	     android:text="中国最好的POS机器经销商中 ,POS机器立刻购买获取20000积分中国最好的POS机器经销商中中国最1111111111111好的POS机器经销商中中国最好的POS机器经销商中11111111sssssssssssssssss"
	    	     android:textColor="@color/text6c6c6c6"
	    	     android:textSize="21sp" />

	<TextView android:id="@+id/msg_time"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="10dp"
	 
	    android:ellipsize="end"
	    android:layout_marginLeft="@dimen/margin_left2"
	    android:layout_marginRight="@dimen/margin_left2"
	   	android:textColor="@color/text6c6c6c6"
	   	android:textSize="12sp"
	    android:text="2015-1-1 12:00:00"/>
	<View  android:layout_marginLeft="@dimen/margin_left2"
	    android:layout_marginRight="@dimen/margin_left2"
	    android:layout_height="0.5dp"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="10dp"
	    android:background="@color/bgtitle"/>
	<TextView android:id="@+id/msg_conten"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="10dp"
	 	android:lineSpacingExtra="6dp"
	    android:ellipsize="end"
	    android:layout_marginLeft="@dimen/margin_left2"
	    android:layout_marginRight="@dimen/margin_left2"
	   	android:textColor="@color/text6c6c6c6"
	   	android:textSize="18sp"
	    android:text="中国最好的POS机器经销商中 ,POS机器立刻购买获取20000积分"/>
	</LinearLayout>

</LinearLayout>
